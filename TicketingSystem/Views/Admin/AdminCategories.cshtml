@model IEnumerable<TicketingSystem.Entities.Categories>

@{
    ViewBag.Title = "Admin Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AdminCategoriess</h2>

<p>
    @Html.ActionLink("Create New", "CreateCategories")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategories", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteCategories", new { id=item.ID })
        </td>
    </tr>
}

</table>
