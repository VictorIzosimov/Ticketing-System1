@model IEnumerable<TicketingSystem.Entities.Comments>

@{
    ViewBag.Title = "Admin Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AdminCommentss</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ticket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ticket)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditComments", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteComments", new { id=item.ID })
        </td>
    </tr>
}

</table>
