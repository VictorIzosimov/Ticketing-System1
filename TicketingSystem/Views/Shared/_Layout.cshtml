<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – Ticketing System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TicketingSystem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="btn-group">



                        @Html.ActionLink("Home", "About", "Home", null, new { @class = "btn btn-primary btn gradient" })
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("user"))
                            {

                                @Html.ActionLink("Add ticket", "AddTicket", "Home", null, new { @class = "btn btn-primary btn gradient" })
                                @Html.ActionLink("View all tickets", "ViewAllTickets", "Home", null, new { @class = "btn btn-primary btn gradient" })
                            }
                        }
                    
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("admin"))
                            {

                            <a class="btn btn-primary btn gradient" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Administration <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Categories", "AdminCategories", "Admin")</li>
                                <li>@Html.ActionLink("Comments", "AdminComments", "Admin")</li>                                
                            </ul>
                            }
                        }
                    

</div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – My Ticketing System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
